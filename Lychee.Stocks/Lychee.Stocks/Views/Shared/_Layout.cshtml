<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("scripts_head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-stocks navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header" id="nav-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Stocks", "Index", "Home", new { area = "" }, new { @class = "navbar-brand color-white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Watch List", "Index", "Watchlist")</li>
                    <li>@Html.ActionLink("Predictions", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stocks <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Stock List", "List", "Stock")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Stock Analysis", "StockAnalysis", "Stock")</li>
                            <li>@Html.ActionLink("Trending Stock Analysis", "StockAnalysisTrending", "Stock")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reports <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Trending Now", "TrendingNow", "Report")</li>
                            <li>@Html.ActionLink("DownTrends", "DownTrends", "Report")</li>
                            <li>@Html.ActionLink("UpTrends", "UpTrends", "Report")</li>
                            <li>@Html.ActionLink("Breakouts", "UpTrends", "Report")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Bids And Asks", "UpTrends", "Report")</li>
                            <li>@Html.ActionLink("Most Trades", "UpTrends", "Report")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Recommended Stocks", "UpTrends", "Report")</li>
                            <li>@Html.ActionLink("Suspended And On Sale", "SuspendedAndOnSale", "Report")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Oversold", "OversoldStocks", "Report")</li>
                            <li>@Html.ActionLink("Oversold Below 10 RSI", "OversoldStocksBelow20", "Report")</li>
                            <li>@Html.ActionLink("Steep Down", "BouncePlay", "Report")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("MACD About To Cross From Below (Bullish)", "MacdAboutToCrossFromBelowBullish", "Report")</li>
                            <li>@Html.ActionLink("MACD Crossing Signal From Below (Bullish)", "MacdCrossingSignalFromBelowBullish", "Report")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">News <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Disclosure", "Disclosure", "News")</li>
                            <li>@Html.ActionLink("Financial Report", "FinancialReport", "News")</li>
                            <li>@Html.ActionLink("Stock News", "Stock", "News")</li>
                            <li>@Html.ActionLink("Business News", "Business", "News")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Market Status", "MarketStatus", "Report")</li>
                    <li>@Html.ActionLink("Events", "Events", "Event")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Broker <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Top Broker", "Disclosure", "News")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Calculator", "Calculator", "Stock")</li>
                    <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Stocks</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Custom/PartialLoader.js"></script>
    @RenderSection("scripts_footer", required: false)
</body>
</html>
