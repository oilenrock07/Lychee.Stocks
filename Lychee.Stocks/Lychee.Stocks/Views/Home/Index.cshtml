@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @{ Html.RenderAction("LastDataUpdates", "Stock");}
</div>

<div class="jumbotron">

    @if (TempData["FetchRealTimeData"] != null)
    {
        <div class="alert alert-success" role="alert">
            Successfully fetched real time data
        </div>
    }

    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="/Stock/FetchRealTimeData" class="btn btn-primary btn-lg">Fetch Real Time Data &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Predictions</h2>
        <p>
            @{ Html.RenderAction("Prediction", "Stock");}
        </p>
        <p><a class="btn btn-default" href="/Stock/CreatePrediction">Create Prediction &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>8/2 Down Trends</h2>
        <p>
            @{ Html.RenderAction("StockTrendReport", "Stock", new { days = 10, losingWinningStreak = 8, trend = "Bearish" });}
        </p>
    </div>
    <div class="col-md-4">
        <h2>3/3 Up Trends</h2>
        <p>
            @{ Html.RenderAction("StockTrendReport", "Stock", new { days = 3, losingWinningStreak = 3, trend = "Bullish" });}
        </p>
    </div>
</div>