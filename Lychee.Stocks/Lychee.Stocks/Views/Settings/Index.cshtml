@model IEnumerable<Lychee.Entities.Entities.Setting>

@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Key)
        </th>
        <th width="50%">
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key)
            </td>
            <td>
                @Html.TextBoxFor(modelItem => item.Value, new { @class = "form-control" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="javascript:void(0)" class="js-update" data-id="@item.SettingId">Update</a> |
                @Html.ActionLink("Delete", "Delete", new {id = item.SettingId})
            </td>
        </tr>
    }
</table>

@section scripts
{
    <script src="~/Scripts/Custom/Setting.js"></script>
}
